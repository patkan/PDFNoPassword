 #!/bin/bash

PASSWORD=$1
FILE=$2

#check for file type
if [ $(mimetype -b "$FILE") != "application/pdf" ]
then
  echo "$FILE seems not to be PDF"
  exit 1
fi

#decrypt
qpdf --password=$PASSWORD --decrypt $FILE "$FILE.decrypt"

#mv into bak
mv "$FILE" "$FILE.bak"

#rename decrypt
mv "$FILE.decrypt" "$FILE"